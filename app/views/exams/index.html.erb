<div class="page-header">
<h1>Listado de exámenes
<small><%= link_to 'Agregar Examen + ', new_exam_path %></small>
</h1>
</div>

<div class="row">
<table class="zebra-striped">
  <tr>
    <th>Materia</th>
    <th>Fecha</th>
    <th>Hora</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exams.each do |exam| %>
  <tr>
    <td><%= exam.materia.nombre + " (" + (to_ordinal(exam.materia.nivel)) + ")" %></td>
    <td><%= format_latin_date(exam.fecha) %></td>
    <td><%= write_hour_only(exam.hora) %></td>
    <td><%= link_to 'Ver', exam %></td>
    <td><%= link_to 'Editar', edit_exam_path(exam) %></td>
    <td><%= link_to 'Borrar', exam, :confirm => 'Está seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

</div>