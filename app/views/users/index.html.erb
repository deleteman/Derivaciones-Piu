<div class="page-header">
<h1>Listado de usuarios no aprovados</h1>
</div>

<div class="row">
<% if @users.size > 0 %>
<table>
  <tr>
    <th>Login</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% end %>
<% @users.each do |user| %>
  <tr>
    <td><%= user.email %></td>
    <td><%#= link_to 'Show', user %></td>
    <td><%= link_to 'Approve', "user/approve/#{user.id}" %></td>
    <td><%#= link_to 'Destroy', @user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end  %>
  </table>
<% if @users.size == 0  %>
	<div class="alert-message warning text-center">
    <p><strong>No hay usuarios para aprovar</strong> <br/></p>
    </div>

	  <% end %>


<br />

<%= link_to 'Registrar nuevo usuario', new_user_path %>
</div>