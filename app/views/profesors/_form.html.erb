<%= form_for(@profesor) do |f| %>
  <% if @profesor.errors.any? %>
	<%= render :partial => 'layouts/error_list',:locals => {:errors => @profesor.errors} %>
      <% end %>

  <div class="field">
    <%= f.label :nombre %>
    <%= f.text_field :nombre %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", {:class => "btn primary"}%>
  </div>
<% end %>
